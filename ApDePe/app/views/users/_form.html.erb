<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibió a este usuario de ser creado:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div id="HeaderTabla"><%= f.label :Nombre_de_usuario %></div>
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <div id="HeaderTabla"><%= f.label :contraseña %></div>
    <%= f.password_field :password %>
  </div>
  <div class="field">
      <div id="HeaderTabla"><%= f.label :Repita_la_contraseña %></div>
      <%= f.password_field :password_confirmation %>
    </div>
  <div class="actions">
    <%= f.submit 'Crear usuario'%>
  </div>
<% end %>

